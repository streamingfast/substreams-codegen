specVersion: 1.0.0
indexerHints:
  prune: auto
schema:
  file: ./schema.graphql
dataSources:
  - kind: substreams
    name: filtered_events
    network: {{ .ChainName }}
    source:
      startBlock: {{ .InitialBlock}}
      package:
        moduleName: {{ .ModuleName }}
        file: {{ .KebabName }}-v0.1.0.spkg
    mapping:
      apiVersion: 0.0.7
      kind: substreams/graph-entities
      file: ./src/mappings.ts
      handler: handleEvents
