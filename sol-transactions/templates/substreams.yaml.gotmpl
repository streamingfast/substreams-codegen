specVersion: v0.1.0
package:
  name: my_project_sol
  version: v0.1.0

imports:
  solana: https://github.com/enoldev/substreams-foundational-modules/releases/download/v0.2.0/solana-common-0.2.0.spkg

modules:
  - name: {{ .ModuleName }}
{{- if .IsTransactionsDataType }}
    use: solana:filtered_transactions_without_votes
{{- else }}
    use: solana:filtered_instructions
{{- end }}

network: solana

params:
  {{ .ModuleName }}: {{ .ProgramId }}
